doctype html
head
  title
    | #{title}
  meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
body(style='width: 100% !important; background-color: #f5f5f5; margin: 0; padding: 0; font-family: \'Helvetica Neue\', Arial, Helvetica, Geneva, sans-serif;')
  table(width='100%', cellpadding='0', cellspacing='0', border='0', style='background-color: #f5f5f5;')
    tr
      td(align='center', bgcolor='#f5f5f5')
        table(width='640', cellpadding='0', cellspacing='0', border='0')
          tbody
            tr
              td(height='20')
                | &nbsp; 
            tr
              td(width='640')
                table(width='640', cellpadding='0', cellspacing='0', border='0', bgcolor='#2b7de3', style='border-radius: 6px 6px 0 0; -moz-border-radius: 6px 6px 0 0; -webkit-border-radius: 6px 6px 0 0; -webkit-font-smoothing: antialiased; background-color: #0050B3; color: #f5f5f5;')
                  tbody
                    tr
                      td(width='15')
                        | &nbsp; 
                      td(valign='middle', align='left', style='font-size: 12px; color: #f5f5f5;', height='30')
                        | #{subject}
            tr
              td(width='640', align='center', bgcolor='#2b7de3')
                table(width='640', cellpadding='0', cellspacing='0', border='0')
                  tbody
                    tr
                      td(height='100', align='center', style='color: #f5f5f5; font-size: 36px;')
                        strong
                          a(href='http://nopa.qarea.org', style='color: #f5f5f5; text-decoration: none;')
                            | #{title}
            tr
              td(height='30', bgcolor='#ffffff')
                | &nbsp; 
            tr
              td(width='640', bgcolor='#ffffff')
                table(width='640', cellpadding='0', cellspacing='0', border='0')
                  tbody
                    tr
                      td(width='30')
                        | &nbsp;
                      td(width='580')
                        table(width='580', cellpadding='0', cellspacing='0', border='0')
                          tbody
                            tr
                              td
                                p(style='font-size: 18px; line-height: 24px; color: #ff8a00; font-weight: bold; margin-top: 0; margin-bottom: 18px;')
                                  block title
                                div(style='font-size: 13px; line-height: 18px; color: #444; margin-top: 0; margin-bottom: 18px;')
                                  block content
                            tr
                              td(width='580', height='10')  
                                | &nbsp;
                      td(width='30')
                        | &nbsp;
            tr
              td(width='640')
                table(width='640', cellpadding='0', cellspacing='0', border='0', bgcolor='#0050B3', style='border-radius: 0 0 6px 6px; -moz-border-radius: 0 0 6px 6px; -webkit-border-radius: 0 0 6px 6px; -webkit-font-smoothing: antialiased; background-color: #0050B3; color: #e2e2e2;')
                  tbody
                    tr
                      td(align='right', style='-webkit-text-size-adjust: none; -ms-text-size-adjust: none; font-size: 12px; line-height: 15px; color: #e2e2e2; margin-top: 0;')
                        | NDG
                      td(width='30', height='30')
                        | &nbsp;
            tr
              td(height='20')
                | &nbsp;
